{
  "author": "TSavo",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.9",
    "@wopr-network/plugin-types": "github:wopr-network/wopr-plugin-types",
    "pino": "^9.0.0",
    "qrcode-terminal": "^0.12.0",
    "winston": "^3.11.0"
  },
  "description": "WhatsApp plugin for WOPR using Baileys (WhatsApp Web)",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.3.0",
    "@types/qrcode-terminal": "^0.12.2",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist/**/*",
    "IDENTITY.md"
  ],
  "keywords": [
    "wopr",
    "wopr-plugin",
    "whatsapp",
    "baileys",
    "whatsapp-web"
  ],
  "license": "MIT",
  "overrides": {
    "axios": "^1.13.5"
  },
  "main": "dist/index.js",
  "name": "@wopr-network/wopr-plugin-whatsapp",
  "peerDependencies": {
    "wopr": "^2.0.0"
  },
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ && tsc --noEmit",
    "format": "biome format --write src/",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "biome check --fix src/",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "types": "dist/index.d.ts",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
